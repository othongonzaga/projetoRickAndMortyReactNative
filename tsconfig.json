{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@screens/*": ["src/Screens/*"],
      "@types/*": ["src/types/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "exclude": ["jest.config.js"]
}
